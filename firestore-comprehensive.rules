rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can read/write their own data, admins can access all
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || 
         (request.auth.token != null && request.auth.token.role == 'admin'));
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bookings collection - users can access their own bookings, admins can access all
    match /bookings/{bookingId} {
      allow read: if request.auth != null && 
        (resource.data.renterId == request.auth.uid || 
         (request.auth.token != null && request.auth.token.role == 'admin'));
      allow write: if request.auth != null && 
        (resource.data.renterId == request.auth.uid || 
         (request.auth.token != null && request.auth.token.role == 'admin'));
      allow create: if request.auth != null;
    }
    
    // Cars collection - public read, authenticated write
    match /cars/{carId} {
      allow read: if true; // Public read for browsing
      allow write: if request.auth != null;
    }
    
    // Car listings collection - public read, authenticated write  
    match /car-listings/{carId} {
      allow read: if true; // Public read for browsing
      allow write: if request.auth != null;
    }
    
    // Vehicles collection - public read, authenticated write
    match /vehicles/{vehicleId} {
      allow read: if true; // Public read for browsing
      allow write: if request.auth != null;
    }
    
    // Chat conversations - users can access conversations they participate in
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
    }
    
    // Chat messages - authenticated users can access
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Default fallback for any other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
