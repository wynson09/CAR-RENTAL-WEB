rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to access all collections for now
    // This ensures your existing app functionality works
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for chat collections (more restrictive)
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
    }
    
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for your car/vehicle collections
    match /cars/{carId} {
      allow read: if true; // Allow public read for car listings
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'moderator');
    }
    
    match /vehicles/{vehicleId} {
      allow read: if true; // Allow public read for vehicle listings
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'moderator');
    }
    
    // Bookings - users can read their own, admins can read all
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && 
        (resource.data.renterId == request.auth.uid || 
         request.auth.token.role == 'admin');
      allow create: if request.auth != null && 
        request.resource.data.renterId == request.auth.uid;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
  }
}
